<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net7.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <VersionPrefix>1.0.1</VersionPrefix>
    <SignAssembly>True</SignAssembly>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>VSpinner a console spinner</Title>
    <Description>The VSpinner is a console spinner or loader  for console applications.</Description>
    <PackageProjectUrl>https://github.com/VikashChauhan51/figlet-ascii-art</PackageProjectUrl>
    <Authors>VikashChauhan51</Authors>
    <Copyright>Copyright Â© VikashChauhan51, 2023</Copyright>
    <RepositoryUrl>https://github.com/VikashChauhan51/figlet-ascii-art</RepositoryUrl>
    <PackageTags>command-line;command-line-spinner;console-spinner;console;console-loader;command-line-spinner;spinner;loader </PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <AssemblyOriginatorKeyFile>..\VSpinner.snk</AssemblyOriginatorKeyFile>
    <RepositoryType>git</RepositoryType>
    <ProjectGuid>{75519BBE-A7AE-4F69-B255-CB95AE265775}</ProjectGuid>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="SpinnerResources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>SpinnerResources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="SpinnerResources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>SpinnerResources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
  
</Project>
